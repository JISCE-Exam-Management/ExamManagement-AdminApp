<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <group android:id="@+id/homeGroup1">
        <item
            android:id="@+id/homeSearch"
            android:icon="@drawable/ic_search"
            android:title="Search"
            app:actionViewClass="androidx.appcompat.widget.SearchView"
            app:showAsAction="always|collapseActionView"
            tools:ignore="HardcodedText" />
        <item
            android:id="@+id/homeAddNew"
            android:icon="@drawable/ic_add"
            android:title="Add New "
            app:showAsAction="always"
            tools:ignore="HardcodedText">
            <menu>
                <item
                    android:id="@+id/homeAddMultiple"
                    android:icon="@drawable/ic_file"
                    android:title="Add Multiple"
                    app:showAsAction="ifRoom"
                    tools:ignore="AlwaysShowAction,HardcodedText" />

                <item
                    android:id="@+id/homeAddSingle"
                    android:icon="@drawable/ic_add"
                    android:title="Add Individual"
                    app:showAsAction="ifRoom"
                    tools:ignore="AlwaysShowAction,HardcodedText" />

            </menu>
        </item>
    </group>
</menu>